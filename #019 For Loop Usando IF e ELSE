
#ENVIO DE E-MAIL LOJA ONLINE 
compra_confirmada = True
dados_compra = 'Compra no valor de R$12.50 e entrega confirmada'

for enviar in range(3):
    #Numero de repetições é 3 
    if compra_confirmada:
        print(dados_compra)
        print('Detalhes via e-mail')
        break
    #Break irá quebrar a repetição se for verdadeira
else: 
    print('Falha na compra')
